{
  "name": "react-demo",
  "version": "1.0.0",
  "description":
    "Single page application written in React that demonstrates common principles and techniques used when writing complex JS applications.",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server",
    "test": "jest --watch"
  },
  "keywords": ["react", "spa", "frontend", "js"],
  "author": "Slava Pavlutin",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.12.5",
    "lodash": "^4.17.10",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.71.0",
    "jest": "^22.4.3",
    "jest-glamor-react": "^4.3.0",
    "react-testing-library": "^2.3.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.3"
  },
  "babel": {
    "presets": ["env"],
    "plugins": [
      "transform-class-properties",
      "transform-flow-strip-types",
      "transform-object-rest-spread",
      "transform-react-jsx",
      "transform-regenerator"
    ]
  },
  "jest": {
    "snapshotSerializers": ["jest-glamor-react"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": ["jest"],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "react/jsx-filename-extension": [0],
      "react/prefer-stateless-function": [0]
    }
  }
}
