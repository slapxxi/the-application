{
  "name": "react-demo",
  "version": "1.0.0",
  "description":
    "Single page application written in React that demonstrates common principles and techniques used when writing complex JS applications.",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "cypress": "cypress open",
    "eslint": "eslint",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "precommit": "npm run lint-staged && npm test",
    "prettier":
      "prettier --arrow-parens=always --print-width=70 --single-quote --trailing-comma=all --write",
    "start": "webpack-dev-server",
    "test": "jest",
    "test:acceptance": "cypress run",
    "test:watch": "jest --watch",
    "tslint": "tslint"
  },
  "keywords": ["react", "spa", "frontend", "js"],
  "author": "Slava Pavlutin",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.5.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.2.7",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "lodash": "^4.17.10",
    "polished": "^1.9.3",
    "puppeteer": "^1.5.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.3.3",
    "ts-loader": "^4.4.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-emotion": "^9.2.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^0.28.11",
    "cypress": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-cypress": "^2.0.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.75.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "jest-styled-components": "^5.0.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-test-renderer": "^16.4.1",
    "react-testing-library": "^4.1.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "workbox-webpack-plugin": "^3.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./src/setupTests.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,css}": ["npm run prettier --", "git add"],
    "*.{js,jsx}": ["npm run eslint --"],
    "*.{ts,tsx}": ["npm run tslint --"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "cypress/globals": true,
      "jest": true,
      "node": true,
      "worker": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": ["jest", "cypress"],
    "rules": {
      "arrow-parens": [0],
      "function-paren-newline": [0],
      "implicit-arrow-linebreak": [0],
      "import/no-extraneous-dependencies": [0],
      "import/no-unresolved": [0],
      "no-mixed-operators": [0],
      "no-use-before-define": [0],
      "object-curly-newline": [0],
      "react/jsx-filename-extension": [0],
      "react/jsx-one-expression-per-line": [0],
      "react/prefer-stateless-function": [0],
      "react/require-default-props": [0],
      "react/sort-comp": [0]
    }
  }
}
